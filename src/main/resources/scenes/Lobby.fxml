         </Pane>
         <Pane fx:id="ipPane" layoutX="68.0" layoutY="34.0" prefHeight="229.0" prefWidth="493.0">
            <children>
               <Label layoutX="102.0" layoutY="61.0" text="Please insert IP and port" />
               <TextField fx:id="ip" layoutX="192.0" layoutY="90.0" prefHeight="25.0" prefWidth="109.0" promptText="IP address" />
               <TextField fx:id="port" layoutX="192.0" layoutY="115.0" prefHeight="25.0" prefWidth="109.0" promptText="port" />
               <Button fx:id="confirmIpButton" layoutX="147.0" layoutY="140.0" mnemonicParsing="false" onAction="#handleConfirmIp" prefWidth="200.0" styleClass="greenButton" stylesheets="@css/Buttons.css" text="Confirm" />
            </children>
         </Pane>
      </children>
   </Pane>
   <Button fx:id="backButton" layoutX="558.0" layoutY="656.0" mnemonicParsing="false" onAction="#handleBackClicked" styleClass="redButton" stylesheets="@css/Buttons.css" text="Back to Menu" />

</AnchorPane>
